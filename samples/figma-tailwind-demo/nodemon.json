{
  "watch": ["./dist/build.js"],
  "ext": "js",
  "exec": "pnpm run exec",
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "events": {
    "restart": "echo 'Rebuild due to:\n'$FILENAME' with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  }
}

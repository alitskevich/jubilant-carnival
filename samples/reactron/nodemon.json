{
  "watch": ["./build.ts", "../figma-tailwind/src", "./src"],
  "ext": "ts,json",
  "exec": "pnpm run build",
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "events": {
    "restart": "echo 'Rebuild due to:\n'$FILENAME' with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  }
}
